{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "hyperreview",
    "version": "0.1.0"
  },

  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.c2j.hyperreview",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "publisher": "C2J",
      "copyright": "Copyright Â© 2025 C2J. All rights reserved.",
      "category": "DeveloperTool",
      "shortDescription": "Advanced code review tool for Git repositories",
      "longDescription": "HyperReview is a powerful desktop application for conducting thorough code reviews of Git repositories. It provides advanced diff viewing, comment management, task tracking, and analytics."
    },
    "allowlist": {
      "shell": {
        "open": true
      },
      "dialog": {
        "open": true,
        "save": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,

        "scope": ["**"]
      }
    },
    "windows": [
      {
        "title": "HyperReview",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "url": "http://localhost:1420",
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "localhost",
          "windows": ["main"],
          "plugins": []
        }
      ]
    }
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "beforeBuildCommand": "npm run build"
  }
}
