{
  "name": "hyperreview",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:build": "tauri build",
    "tauri:build:optimized": "tauri build --debug",
    "tauri:build:compress": "npm run tauri:build && ./scripts/compress-bundles.sh",
    "compress:binaries": "find src-tauri/target/release/bundle -name 'hyperreview*' -type f -exec upx --best {} \\; 2>/dev/null || echo 'UPX not installed, skipping compression'"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.6.0",
    "@tauri-apps/plugin-opener": "^1",
    "@types/react-window": "^2.0.0",
    "lucide-react": "^0.561.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-window": "^2.2.3",
    "react-window-infinite-loader": "^2.0.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.6.3",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "postcss-color-functional-notation": "^7.0.12",
    "postcss-preset-env": "^10.5.0",
    "tailwindcss": "3.4",
